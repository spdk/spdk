[global]
ioengine=spdk_bdev
spdk_conf=FTL_CONF_DIR/ftl.conf
thread=1
direct=1
iodepth=128
rw=randwrite
verify=crc32c
do_verify=1
verify_dump=0
verify_state_save=0
verify_backlog=5000
verify_fatal=1
bs=4k
filename=FTL_BDEV_NAME
random_distribution=normal
serialize_overlap=1
io_size=1G

[first_half]
offset=0%
size=50%

[second_half]
offset=50%
