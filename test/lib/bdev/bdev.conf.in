[crypto]
 CRY Malloc3 ptd

[Malloc]
  NumberOfLuns 4
  LunSizeInMB 64

[Split]
  # Split Malloc1 into two auto-sized halves
  Split Malloc1 2

  # Split Malloc2 into eight 4-megabyte pieces,
  # leaving the rest of the device inaccessible
  Split Malloc2 8 4

[AIO]
  AIO /dev/ram0 AIO0
  AIO /tmp/aiofile AIO1 2048

[Ioat]
  Disable Yes
