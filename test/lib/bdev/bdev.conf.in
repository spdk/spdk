[Malloc]
  NumberOfLuns 3
  LunSizeInMB 64

[Split]
  # Split Malloc1 into two auto-sized halves
  Split Malloc1 2

  # Split Malloc2 into eight 4-megabyte pieces,
  # leaving the rest of the device inaccessible
  Split Malloc2 8 4

[AIO]
  AIO /dev/ram0 AIO0
  AIO /tmp/aiofile AIO1 2048

[Ioat]
  Disable Yes

[QoS]
  # QoS section defines IOPS rate limiting for
  # each block device.
  #
  # Format: Bdev_Name Expected_IOPS
  #
  # A requirement of minimum 1000 and multiple of
  # 1000 IOPS is needed
  #
  # Global setting of timeout in milliseconds for
  # the IO under QoS control. The BUSY state will
  # be returned when timeout.
  Timeout 100
  # Assign 20000 IOPS for the Malloc0 block device
  Malloc0 20000
